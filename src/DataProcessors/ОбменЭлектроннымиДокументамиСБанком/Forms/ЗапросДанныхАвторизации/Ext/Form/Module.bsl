// ОБРАБОТЧИКИ КОМАНД ФОРМЫ

&НаКлиенте
Процедура ОК(Команда)
	
	Если НЕ ПроверитьЗаполнение() Тогда
		Возврат;
	КонецЕсли;
	
	ДанныеАвторизации = Новый Структура;
	НомерКонтейнера = Число(Сред(УчетнаяЗапись, 4, 1));
	ДанныеАвторизации.Вставить("НомерКонтейнера", НомерКонтейнера);
	ДанныеАвторизации.Вставить("ПинКод", ПинКод);
	Закрыть(ДанныеАвторизации);
	
КонецПроцедуры

&НаКлиенте
Процедура Отмена(Команда)
	
	Закрыть(Неопределено);
	
КонецПроцедуры

