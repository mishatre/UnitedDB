КонецФункции

//
Процедура ПриВыводеСтрокиПользователя(Элемент, ОформлениеСтроки, ДанныеСтроки, Знач СоответствиеИменПользователейИБ = Неопределено) Экспорт
	
	ИмяПользователяИБ = СокрЛП(ДанныеСтроки.Код);
	
	Если ИмяПользователяИБ = "НеАвторизован" Тогда
		Возврат;
	КонецЕсли;
	
	Если СоответствиеИменПользователейИБ = Неопределено Тогда 
		
		//ищем пользователя ИБ
		ТекПользовательИБ = УправлениеПользователями.НайтиПользователяИБ(ИмяПользователяИБ);
		
	Иначе
		
		ТекПользовательИБ = СоответствиеИменПользователейИБ.Получить(ИмяПользователяИБ);
		
	КонецЕсли;
	
	Если ТекПользовательИБ = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	КолонкаКартинки = ОформлениеСтроки.Ячейки.КартинкаПользователяИБ;
	КолонкаКартинки.Картинка = ?(ТекПользовательИБ.ПарольУстановлен, мКартинки[1], мКартинки[0]);
	КолонкаКартинки.ОтображатьКартинку = Истина;
	
	// надо список ролей пользователя еще выводить
	РезультатИмена         = "";
	РезультатПредставление = "";
	СформироватьИменаРолейДляВыводаПользователю(ТекПользовательИБ, РезультатИмена, РезультатПредставление);
	ОформлениеСтроки.Ячейки.РолиПредставление.Значение = РезультатПредставление;
	
КонецПроцедуры

