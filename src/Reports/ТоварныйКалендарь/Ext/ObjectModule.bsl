		|	" + ОписаниеПоляЗапроса + " КАК " + СтрокаГруппировки.ИмяГруппировки;

		Если СтрокаГруппировки.ЕстьПолеПредставление Тогда
			ТекстПоляЗапроса = ТекстПоляЗапроса + ",
			|	" + ОписаниеПоляЗапроса + ".Представление КАК " + СтрокаГруппировки.ИмяГруппировки + "Представление";
		Иначе
			ТекстПоляЗапроса = ТекстПоляЗапроса + ",
			|	" + ОписаниеПоляЗапроса + " КАК " + СтрокаГруппировки.ИмяГруппировки + "Представление";
		КонецЕсли;

	КонецЦикла;

	//Добавляем предопределенную группировку по периоду

	Если Источник="ЗаказыПокупателей" Тогда

		ТекстПоляЗапроса = ТекстПоляЗапроса + ",
		|	ЗаказПокупателя.ДатаОтгрузки КАК Период,
		|	ЗаказПокупателя.ДатаОтгрузки КАК ПериодПредставление";

	ИначеЕсли Источник="ЗаказыПоставщикам" Тогда

