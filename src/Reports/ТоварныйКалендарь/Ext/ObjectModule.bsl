	ЗначениеПоказателя="";

	НачальныйОстаток=?(ПустаяСтрока(Выборка["НачальныйОстаток"]),0,Выборка["НачальныйОстаток"]);
	Поступление=0;
	Отгрузка=0;

	ОбластьЗначенияПоказателя.Параметры.Поступление=""+Формат(Поступление, ФорматПоказателя);
	ОбластьЗначенияПоказателя.Параметры.Отгрузка=""+Формат(Отгрузка, ФорматПоказателя);
	ОбластьЗначенияПоказателя.Параметры.НачальныйОстаток=""+Формат(НачальныйОстаток, ФорматПоказателя);

	ОбластьЗначенияПоказателя.Параметры.РасшифровкаПоступление=Неопределено;
	ОбластьЗначенияПоказателя.Параметры.РасшифровкаОтгрузка=Неопределено;

	ТабДок.Присоединить(ОбластьЗначенияПоказателя);

	А=ТабДок.ВысотаТаблицы;
	В=4;

	Если НачальныйОстаток<0 Тогда
		ТабДок.Область(А,В,А,В).ЦветТекста=Новый Цвет(255,0,0);
	КонецЕсли;

	Поступление			=?(ПустаяСтрока(Выборка["Поступление"]),0,Выборка["Поступление"]);
	Отгрузка			=?(ПустаяСтрока(Выборка["Отгрузка"]),0,Выборка["Отгрузка"]);

	ЗначениеПоказателя="";

	ОбластьЗначенияПоказателя.Параметры.Поступление=""+Формат(Поступление, ФорматПоказателя);
	ОбластьЗначенияПоказателя.Параметры.Отгрузка=""+Формат(Отгрузка, ФорматПоказателя);
	ОбластьЗначенияПоказателя.Параметры.НачальныйОстаток=""+Формат(0, ФорматПоказателя);

	ПараметрыПоступление=Новый Структура;
	ПараметрыПоступление.Вставить("ИмяРегистра","ЗаказыПоставщикам");
	ОбластьЗначенияПоказателя.Параметры.РасшифровкаПоступление=ПараметрыПоступление;

	ПараметрыОтгрузка=Новый Структура;
	ПараметрыОтгрузка.Вставить("ИмяРегистра","ЗаказыПокупателей");
	ОбластьЗначенияПоказателя.Параметры.РасшифровкаОтгрузка=ПараметрыОтгрузка;

	ТабДок.Присоединить(ОбластьЗначенияПоказателя);

	Если НачальныйОстаток<0 Тогда
		ТабДок.Область(	ТабДок.ВысотаТаблицы,ТабДок.ШиринаТаблицы,
		ТабДок.ВысотаТаблицы,ТабДок.ШиринаТаблицы).ЦветТекста=Новый Цвет(255,0,0);
	КонецЕсли;

	РазвернутьСтроку(Выборка.Выбрать(ОбходРезультатаЗапроса.ПоГруппировкам,"Период", "Все"),СтруктураПараметров,ТабДок,НачальныйОстаток);

