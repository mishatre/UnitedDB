						"СхемаДанных",
						,
						,
						,
						АдресХранилища,
						,
						,
						Справочники.ЭДПрисоединенныеФайлы.ПолучитьСсылку());
		ПараметрыФайла = Новый Структура;
		ПараметрыФайла.Вставить("ВидЭД",                       Перечисления.ВидыЭД.ДопДанные);
