	СохранитьЗначение(СтрЗаменить(?(ИмяОбъекта = Неопределено, Строка(Отчет), ИмяОбъекта), ".", "_") + "_ПоказыватьЗаголовок", Объект.ПоказыватьЗаголовок);
	
