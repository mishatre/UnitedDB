	ТекстЗапроса= ТекстЗапроса + ") КАК "+Источник;

	ТекстЗапроса= ТекстЗапроса + ТекстИсточникиСведений;

	Если Не ПустаяСтрока(ТекстОбщиеФильтры) Тогда
		ТекстЗапроса = ТекстЗапроса  + Символы.ПС +
		"ГДЕ" + ТекстОбщиеФильтры;
