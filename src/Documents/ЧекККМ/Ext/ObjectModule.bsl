		КонецЕсли;

		ДокументЧекККМ.Вывести(ОбластьТелоЧекаОтступ);
	КонецЦикла;
	//ДокументЧекККМ.УдалитьСтроку(ДокументЧекККМ.КоличествоСтрок());

	// ПОДВАЛ
	ОбластьПодвалЧека.Параметры.Итог = Формат(Выборка.СуммаДокумента, "ЧЦ=15; ЧДЦ=2; ЧРД=.; ЧН=; ЧГ=0");
